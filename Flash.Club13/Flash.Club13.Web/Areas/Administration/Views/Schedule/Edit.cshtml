@section scripts{
    @Scripts.Render("~/bundles/jqueryunob")

    <script type="text/javascript">
        $(document).ready(function () {
            $.get('/workout/getworkoutnames', function (data) {
                $.each(data, function (index, value) {
                    $('<option>').val(value).text(value).appendTo('#Monday');
                    $('<option>').val(value).text(value).appendTo('#Tuesday');
                    $('<option>').val(value).text(value).appendTo('#Wednesday');
                    $('<option>').val(value).text(value).appendTo('#Thursday');
                    $('<option>').val(value).text(value).appendTo('#Friday');
                    $('<option>').val(value).text(value).appendTo('#Saturday');
                    $('<option>').val(value).text(value).appendTo('#Sunday');
                })
            })
        })

        function updateUi(res) {
            console.log(res)
        }
    </script>
}