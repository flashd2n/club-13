@using Flash.Club13.Web.Models.Home
@model HomeWoDViewModel

@if (Model != null)
{
    <h1>Workout of the day</h1>
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    if (Model.Exercises.Count != 0)
    {
        <h3>Exercises:</h3>
    }
    <ul>
        @foreach (var exercise in Model.Exercises)
        {
            <li>@exercise.Name</li>
        }
    </ul>
    <h2>Best Time</h2>
    @Html.DisplayFor(x => x.BestTime)
} else
{
    <p>No workout today!</p>
}

