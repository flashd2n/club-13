@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Sports Club 13</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Total Members</h2>
        @Html.Action("TotalMembers", "Home")
    </div>
    <div class="col-md-6">
        <h2>Total Workouts Made</h2>
        @Html.Action("TotalWorkouts", "Home")
    </div>
</div>
<h2>Workout of the day</h2>

<div class="row">
        @Html.Action("GetWorkOutOfTheDay", "Workout")
</div>

<div class="row">
    <div class="col-md-12">
        @if (Request.IsAuthenticated)
        {
            @Html.Action("SignUpForWorkout", "Workout")
        }
    </div>
    
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryunob")
}